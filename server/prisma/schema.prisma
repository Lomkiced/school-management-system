// FILE: server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================= ENUMS =================

enum UserRole {
  SUPER_ADMIN
  ADMIN
  TEACHER
  STUDENT
  PARENT
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

enum FeeStatus {
  PAID
  PARTIAL
  UNPAID
}

enum PaymentMethod {
  CASH
  ONLINE
  CHECK
  BANK_TRANSFER
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  IDENTIFICATION
}

// ================= AUTOMATION ENUMS =================

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

enum NotificationType {
  ATTENDANCE_ABSENT
  ATTENDANCE_LATE
  GRADE_POSTED
  INVOICE_GENERATED
  INVOICE_OVERDUE
  PORTAL_BLOCKED
  ASSIGNMENT_DUE
  QUIZ_RESULT
  SYSTEM_ALERT
}

enum NotificationChannel {
  EMAIL
  SMS
  PUSH
  IN_APP
}

enum NotificationStatus {
  PENDING
  SENT
  FAILED
  READ
}

enum GradeType {
  QUIZ
  ASSIGNMENT
  EXAM
  PROJECT
  PARTICIPATION
}

enum CheckInMethod {
  QR_CODE
  MANUAL
  BIOMETRIC
  RFID
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

// ================= USERS & PROFILES =================

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(STUDENT)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Profiles
  adminProfile   Admin?
  teacherProfile Teacher?
  studentProfile Student?
  parentProfile  Parent?

  // Communication
  sentChats     Chat[]         @relation("Sender")
  receivedChats Chat[]         @relation("Receiver")
  notifications Notification[]
  auditLogs     AuditLog[]
}

model Admin {
  id        String  @id @default(uuid())
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName String
  lastName  String
  phone     String?
}

model Teacher {
  id             String  @id @default(uuid())
  userId         String  @unique
  user           User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName      String
  lastName       String
  phone          String?
  address        String?
  specialization String? // Subject/area of expertise

  // Workload tracking
  maxWeeklyHours Int @default(40)

  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id])

  classes   Class[]
  schedules Schedule[]
}

model Department {
  id          String   @id @default(uuid())
  name        String   @unique
  code        String?  @unique
  description String?
  
  teachers    Teacher[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Parent {
  id        String    @id @default(uuid())
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName String
  lastName  String
  phone     String?
  address   String?
  students  Student[]
}

model Student {
  id            String    @id @default(uuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName     String
  lastName      String
  dateOfBirth   DateTime?
  gender        Gender    @default(MALE)
  address       String?
  guardianName  String?
  guardianPhone String?

  // Automation Fields
  gradeLevel      Int     @default(1)      // Grade 1-12 for fee tiers
  isPortalBlocked Boolean @default(false)  // Block access if unpaid

  // Relations
  parentId String?
  parent   Parent? @relation(fields: [parentId], references: [id])

  enrollments     Enrollment[]
  grades          Grade[]
  attendance      Attendance[]
  studentFees     StudentFee[]
  submissions     Submission[]
  quizAttempts    QuizAttempt[]
  invoices        Invoice[]
  academicRecords AcademicRecord[]
}

// ================= ACADEMICS =================

model AcademicYear {
  id        String   @id @default(uuid())
  name      String // e.g., "2025-2026"
  isCurrent Boolean  @default(false)
  startDate DateTime
  endDate   DateTime

  terms           Term[]
  fees            FeeStructure[]
  academicRecords AcademicRecord[]
  schedules       Schedule[]
}

model Term {
  id             String       @id @default(uuid())
  name           String // e.g., "1st Quarter"
  academicYearId String
  academicYear   AcademicYear @relation(fields: [academicYearId], references: [id])

  grades Grade[]
}

model Subject {
  id          String  @id @default(uuid())
  name        String
  code        String  @unique // e.g., "MATH101"
  description String?
  classes     Class[]
}

model Class {
  id        String   @id @default(uuid())
  name      String // e.g., "Grade 10 - Rizal"
  teacherId String?
  teacher   Teacher? @relation(fields: [teacherId], references: [id])
  subjectId String?
  subject   Subject? @relation(fields: [subjectId], references: [id])

  enrollments      Enrollment[]
  attendance       Attendance[]
  grades           Grade[]
  assignments      Assignment[]
  subjectMaterials SubjectMaterial[]
  quizzes          Quiz[]
  schedules        Schedule[]
}

model Enrollment {
  id        String   @id @default(uuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  classId   String
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  joinedAt  DateTime @default(now())

  @@unique([studentId, classId])
}

// ================= GRADING =================

model Grade {
  id        String    @id @default(uuid())
  score     Float
  feedback  String?
  studentId String
  student   Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  classId   String
  class     Class     @relation(fields: [classId], references: [id], onDelete: Cascade)
  termId    String
  term      Term      @relation(fields: [termId], references: [id])
  subjectId String?

  // Automation Fields for GPA
  weight    Float     @default(1.0)       // For weighted GPA calculation
  gradeType GradeType @default(EXAM)      // Quiz, Assignment, Exam, etc.

  gradedById String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([studentId, classId, termId, subjectId, gradeType])
}

model Attendance {
  id        String           @id @default(uuid())
  date      DateTime         @db.Date
  status    AttendanceStatus
  studentId String
  student   Student          @relation(fields: [studentId], references: [id])
  classId   String
  class     Class            @relation(fields: [classId], references: [id])

  // Check-in tracking
  checkInTime   DateTime?
  checkOutTime  DateTime?
  checkInMethod CheckInMethod @default(MANUAL)
  qrToken       String?                         // Unique token for QR check-in
  remarks       String?

  // Parent notification tracking
  parentNotified Boolean  @default(false)
  notifiedAt     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([studentId, classId, date])
  @@index([date, classId])
}

// ================= LMS =================

model Assignment {
  id          String   @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime
  maxScore    Float
  fileUrl     String?
  fileType    String?

  classId String
  class   Class  @relation(fields: [classId], references: [id], onDelete: Cascade)

  submissions Submission[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Submission {
  id           String     @id @default(uuid())
  studentId    String
  student      Student    @relation(fields: [studentId], references: [id], onDelete: Cascade)
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  fileUrl     String?
  content     String?
  grade       Float?
  feedback    String?
  submittedAt DateTime  @default(now())
  gradedAt    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([studentId, assignmentId])
}

model SubjectMaterial {
  id        String   @id @default(uuid())
  title     String
  fileUrl   String
  fileType  String
  classId   String
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Quiz {
  id           String  @id @default(uuid())
  title        String
  description  String?
  duration     Int // in minutes
  passingScore Float

  classId String
  class   Class  @relation(fields: [classId], references: [id], onDelete: Cascade)

  questions Question[]
  attempts  QuizAttempt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Question {
  id     String       @id @default(uuid())
  text   String
  points Float
  type   QuestionType

  quizId String
  quiz   Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)

  options QuestionOption[]
  answers QuizAnswer[]
}

model QuestionOption {
  id        String  @id @default(uuid())
  text      String
  isCorrect Boolean @default(false)

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  answers QuizAnswer[]
}

model QuizAttempt {
  id        String  @id @default(uuid())
  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  quizId    String
  quiz      Quiz    @relation(fields: [quizId], references: [id], onDelete: Cascade)

  score      Float
  finishedAt DateTime @default(now())

  answers   QuizAnswer[]
  createdAt DateTime     @default(now())
}

model QuizAnswer {
  id String @id @default(uuid())

  attemptId String
  attempt   QuizAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  selectedOptionId String?
  selectedOption   QuestionOption? @relation(fields: [selectedOptionId], references: [id])

  textAnswer String?
  createdAt  DateTime @default(now())
}

// ================= FINANCE =================

model FeeStructure {
  id             String        @id @default(uuid())
  name           String
  amount         Float
  description    String?
  dueDate        DateTime?
  academicYearId String?
  academicYear   AcademicYear? @relation(fields: [academicYearId], references: [id])

  studentFees StudentFee[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model StudentFee {
  id     String    @id @default(uuid())
  status FeeStatus @default(UNPAID)

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  feeStructureId String
  feeStructure   FeeStructure @relation(fields: [feeStructureId], references: [id])

  payments  Payment[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Payment {
  id        String        @id @default(uuid())
  amount    Float
  method    PaymentMethod
  reference String?
  paidAt    DateTime      @default(now())

  studentFeeId String
  studentFee   StudentFee @relation(fields: [studentFeeId], references: [id])
}

// ================= COMMUNICATION =================

model Chat {
  id         String   @id @default(uuid())
  message    String
  senderId   String
  sender     User     @relation("Sender", fields: [senderId], references: [id])
  receiverId String
  receiver   User     @relation("Receiver", fields: [receiverId], references: [id])
  createdAt  DateTime @default(now())
  isRead     Boolean  @default(false)
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  details   String?
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

// ================= AUTOMATION: INVOICING =================

model Invoice {
  id            String        @id @default(uuid())
  invoiceNumber String        @unique                    // e.g., "INV-2026-0001"
  studentId     String
  student       Student       @relation(fields: [studentId], references: [id])

  amount        Float                                    // Total amount
  dueDate       DateTime
  status        InvoiceStatus @default(PENDING)
  isOverdue     Boolean       @default(false)

  // Metadata
  description   String?
  billingPeriod String?                                  // e.g., "January 2026"

  generatedAt   DateTime      @default(now())
  paidAt        DateTime?

  items         InvoiceItem[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([studentId, status])
  @@index([dueDate, isOverdue])
}

model InvoiceItem {
  id          String   @id @default(uuid())
  invoiceId   String
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  description String
  amount      Float
  quantity    Int      @default(1)
}

// ================= AUTOMATION: NOTIFICATIONS =================

model Notification {
  id        String             @id @default(uuid())
  userId    String
  user      User               @relation(fields: [userId], references: [id])

  type      NotificationType
  channel   NotificationChannel @default(IN_APP)
  title     String
  message   String
  link      String?                                      // Deep link to relevant page
  metadata  Json?                                        // Flexible payload

  status    NotificationStatus @default(PENDING)
  isRead    Boolean            @default(false)

  sentAt    DateTime?
  readAt    DateTime?
  createdAt DateTime           @default(now())

  @@index([userId, isRead])
  @@index([userId, type])
  @@index([createdAt])
}

// ================= AUTOMATION: ACADEMIC RECORDS =================

model AcademicRecord {
  id             String       @id @default(uuid())
  studentId      String
  student        Student      @relation(fields: [studentId], references: [id])
  academicYearId String
  academicYear   AcademicYear @relation(fields: [academicYearId], references: [id])

  gpa            Float?                                  // Calculated GPA
  totalCredits   Float?
  classRank      Int?
  isPromoted     Boolean      @default(false)
  promotedTo     Int?                                    // Next grade level
  remarks        String?

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([studentId, academicYearId])
}

// ================= SCHEDULING: TIMETABLE =================

model TimeSlot {
  id        String   @id @default(uuid())
  name      String                                       // e.g., "Period 1"
  startTime String                                       // e.g., "08:00"
  endTime   String                                       // e.g., "09:00"
  order     Int                                          // Display order
  
  schedules Schedule[]
}

model Schedule {
  id             String       @id @default(uuid())
  classId        String
  class          Class        @relation(fields: [classId], references: [id])
  teacherId      String
  teacher        Teacher      @relation(fields: [teacherId], references: [id])
  timeSlotId     String
  timeSlot       TimeSlot     @relation(fields: [timeSlotId], references: [id])
  dayOfWeek      DayOfWeek
  room           String?

  academicYearId String
  academicYear   AcademicYear @relation(fields: [academicYearId], references: [id])

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  // Prevent scheduling conflicts
  @@unique([teacherId, timeSlotId, dayOfWeek, academicYearId])
  @@unique([classId, timeSlotId, dayOfWeek, academicYearId])
  @@unique([room, timeSlotId, dayOfWeek, academicYearId])
  @@index([dayOfWeek, academicYearId])
}

// ================= CONFIGURATION =================

model GradeLevel {
  id        String   @id @default(uuid())
  label     String   // e.g., "Grade 1", "Senior High 2", "College 3"
  value     Int      @unique // The integer used in Student.gradeLevel
  category  String?  // "Preschool", "Elementary", "JHS", "SHS", "College"
  order     Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

