// FILE: server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================= ENUMS =================

enum UserRole {
  SUPER_ADMIN
  ADMIN
  TEACHER
  STUDENT
  PARENT
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

enum FeeStatus {
  PAID
  PARTIAL
  UNPAID
}

enum PaymentMethod {
  CASH
  ONLINE
  CHECK
  BANK_TRANSFER
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  IDENTIFICATION
}

// ================= USERS & PROFILES =================

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(STUDENT)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Profiles
  adminProfile   Admin?
  teacherProfile Teacher?
  studentProfile Student?
  parentProfile  Parent?

  // Audits
  sentChats     Chat[]    @relation("Sender")
  receivedChats Chat[]    @relation("Receiver")
  auditLogs     AuditLog[]
}

model Admin {
  id        String @id @default(uuid())
  userId    String @unique
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName String
  lastName  String
  phone     String?
}

model Teacher {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName String
  lastName  String
  phone     String?
  address   String?
  
  classes   Class[]
}

model Parent {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName String
  lastName  String
  phone     String?
  address   String?
  
  students  Student[]
}

model Student {
  id            String    @id @default(uuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Profile
  firstName     String
  lastName      String
  dateOfBirth   DateTime?
  gender        Gender    @default(MALE)
  address       String?
  guardianName  String?
  guardianPhone String?

  // Relations
  parentId      String?
  parent        Parent?   @relation(fields: [parentId], references: [id])
  
  enrollments   Enrollment[]
  grades        Grade[]
  attendance    Attendance[]
  studentFees   StudentFee[]
  submissions   Submission[]
  quizAttempts  QuizAttempt[]
}

// ================= ACADEMICS =================

model AcademicYear {
  id        String   @id @default(uuid())
  name      String   // e.g., "2025-2026"
  isCurrent Boolean  @default(false)
  startDate DateTime
  endDate   DateTime

  terms     Term[]
  fees      FeeStructure[]
}

model Term {
  id             String       @id @default(uuid())
  name           String       // e.g., "1st Quarter"
  academicYearId String
  academicYear   AcademicYear @relation(fields: [academicYearId], references: [id])
  
  grades         Grade[]
}

model Subject {
  id          String   @id @default(uuid())
  name        String
  code        String   @unique // e.g., "MATH101"
  description String?
  
  classes     Class[]
}

model Class {
  id        String   @id @default(uuid())
  name      String   // e.g., "Grade 10 - Rizal"
  teacherId String?
  teacher   Teacher? @relation(fields: [teacherId], references: [id])
  subjectId String?
  subject   Subject? @relation(fields: [subjectId], references: [id])
  
  enrollments      Enrollment[]
  attendance       Attendance[]
  grades           Grade[]
  assignments      Assignment[]
  subjectMaterials SubjectMaterial[]
  quizzes          Quiz[]
}

model Enrollment {
  id        String   @id @default(uuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  classId   String
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  
  joinedAt  DateTime @default(now())

  @@unique([studentId, classId])
}

// ================= GRADING =================

model Grade {
  id        String   @id @default(uuid())
  score     Float
  feedback  String?
  
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  classId   String
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  termId    String
  term      Term     @relation(fields: [termId], references: [id])
  
  subjectId String? 

  gradedById String? 
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([studentId, classId, termId, subjectId])
}

model Attendance {
  id        String           @id @default(uuid())
  date      DateTime
  status    AttendanceStatus
  
  studentId String
  student   Student          @relation(fields: [studentId], references: [id])
  classId   String
  class     Class            @relation(fields: [classId], references: [id])
}

// ================= LMS (LEARNING MANAGEMENT SYSTEM) =================

model Assignment {
  id          String   @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime
  maxScore    Float
  fileUrl     String?
  fileType    String?
  
  classId     String
  class       Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  
  submissions Submission[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Submission {
  id           String    @id @default(uuid())
  studentId    String
  student      Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  
  fileUrl      String?
  content      String?   // For text submissions
  grade        Float?
  feedback     String?
  submittedAt  DateTime  @default(now())
  gradedAt     DateTime?
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([studentId, assignmentId])
}

model SubjectMaterial {
  id        String   @id @default(uuid())
  title     String
  fileUrl   String
  fileType  String
  
  classId   String
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Quiz {
  id           String   @id @default(uuid())
  title        String
  description  String?
  duration     Int      // in minutes
  passingScore Float
  
  classId      String
  class        Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  
  questions    Question[]
  attempts     QuizAttempt[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Question {
  id      String       @id @default(uuid())
  text    String
  points  Float
  type    QuestionType
  
  quizId  String
  quiz    Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  options QuestionOption[]
  answers QuizAnswer[]
}

model QuestionOption {
  id         String   @id @default(uuid())
  text       String
  isCorrect  Boolean  @default(false)
  
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  answers    QuizAnswer[]
}

model QuizAttempt {
  id         String   @id @default(uuid())
  studentId  String
  student    Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  quizId     String
  quiz       Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  score      Float
  finishedAt DateTime @default(now())
  
  answers    QuizAnswer[]
  createdAt  DateTime @default(now())
}

model QuizAnswer {
  id               String  @id @default(uuid())
  attemptId        String
  attempt          QuizAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  
  questionId       String
  question         Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  selectedOptionId String?
  selectedOption   QuestionOption? @relation(fields: [selectedOptionId], references: [id])
  
  textAnswer       String? // For IDENTIFICATION type questions
  
  createdAt        DateTime @default(now())
}

// ================= FINANCE =================

model FeeStructure {
  id             String        @id @default(uuid())
  name           String        // e.g., "Tuition Fee"
  amount         Float
  description    String?
  dueDate        DateTime?
  academicYearId String?
  academicYear   AcademicYear? @relation(fields: [academicYearId], references: [id])
  
  studentFees    StudentFee[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model StudentFee {
  id             String       @id @default(uuid())
  status         FeeStatus    @default(UNPAID)
  
  studentId      String
  student        Student      @relation(fields: [studentId], references: [id])
  feeStructureId String
  feeStructure   FeeStructure @relation(fields: [feeStructureId], references: [id])
  
  payments       Payment[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Payment {
  id           String        @id @default(uuid())
  amount       Float
  method       PaymentMethod
  reference    String?       // e.g., Receipt No. or Transaction ID
  paidAt       DateTime      @default(now())
  
  studentFeeId String
  studentFee   StudentFee    @relation(fields: [studentFeeId], references: [id])
}

// ================= COMMUNICATION =================

model Chat {
  id         String   @id @default(uuid())
  message    String
  senderId   String
  sender     User     @relation("Sender", fields: [senderId], references: [id])
  receiverId String
  receiver   User     @relation("Receiver", fields: [receiverId], references: [id])
  createdAt  DateTime @default(now())
  isRead     Boolean  @default(false)
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  details   String?
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}