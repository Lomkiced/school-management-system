// FILE: server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================= ENUMS =================

enum UserRole {
  SUPER_ADMIN
  ADMIN
  TEACHER
  STUDENT
  PARENT
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

enum FeeStatus {
  PAID
  PARTIAL
  UNPAID
}

enum PaymentMethod {
  CASH
  ONLINE
  CHECK
  BANK_TRANSFER
}

// ================= USERS & PROFILES =================

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(STUDENT)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Profiles
  adminProfile   Admin?
  teacherProfile Teacher?
  studentProfile Student?
  parentProfile  Parent?

  // Audits
  sentChats     Chat[]    @relation("Sender")
  receivedChats Chat[]    @relation("Receiver")
  auditLogs     AuditLog[]
}

model Admin {
  id        String @id @default(uuid())
  userId    String @unique
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName String
  lastName  String
  phone     String?
}

model Teacher {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName String
  lastName  String
  phone     String?
  address   String?
  
  classes   Class[]
}

model Parent {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName String
  lastName  String
  phone     String?
  address   String?
  
  students  Student[]
}

model Student {
  id            String    @id @default(uuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Profile
  firstName     String
  lastName      String
  dateOfBirth   DateTime?
  gender        Gender    @default(MALE)
  address       String?
  guardianName  String?
  guardianPhone String?

  // Relations
  parentId      String?
  parent        Parent?   @relation(fields: [parentId], references: [id])
  
  enrollments   Enrollment[]
  grades        Grade[]
  attendance    Attendance[]
  studentFees   StudentFee[]
}

// ================= ACADEMICS =================

model AcademicYear {
  id        String   @id @default(uuid())
  name      String   // e.g., "2025-2026"
  isCurrent Boolean  @default(false)
  startDate DateTime
  endDate   DateTime

  terms     Term[]
  fees      FeeStructure[]
}

model Term {
  id             String       @id @default(uuid())
  name           String       // e.g., "1st Quarter"
  academicYearId String
  academicYear   AcademicYear @relation(fields: [academicYearId], references: [id])
  
  grades         Grade[]
}

model Subject {
  id          String   @id @default(uuid())
  name        String
  code        String   @unique // e.g., "MATH101"
  description String?
  
  classes     Class[]
}

model Class {
  id        String   @id @default(uuid())
  name      String   // e.g., "Grade 10 - Rizal"
  teacherId String?
  teacher   Teacher? @relation(fields: [teacherId], references: [id])
  subjectId String?
  subject   Subject? @relation(fields: [subjectId], references: [id])
  
  enrollments Enrollment[]
  attendance  Attendance[]
  grades      Grade[]
}

model Enrollment {
  id        String   @id @default(uuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  classId   String
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  
  joinedAt  DateTime @default(now())

  @@unique([studentId, classId])
}

// ================= GRADING =================

model Grade {
  id        String   @id @default(uuid())
  score     Float
  feedback  String?
  
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  classId   String
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  termId    String
  term      Term     @relation(fields: [termId], references: [id])
  
  // Optional: If you grade by subject specifically (usually implied by Class)
  subjectId String? 

  gradedById String? 
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([studentId, classId, termId, subjectId]) // Prevent duplicate grades
}

model Attendance {
  id        String           @id @default(uuid())
  date      DateTime
  status    AttendanceStatus
  
  studentId String
  student   Student          @relation(fields: [studentId], references: [id])
  classId   String
  class     Class            @relation(fields: [classId], references: [id])
}

// ================= FINANCE =================

model FeeStructure {
  id             String        @id @default(uuid())
  name           String        // e.g., "Tuition Fee"
  amount         Float
  description    String?
  dueDate        DateTime?
  academicYearId String?
  academicYear   AcademicYear? @relation(fields: [academicYearId], references: [id])
  
  studentFees    StudentFee[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model StudentFee {
  id             String       @id @default(uuid())
  status         FeeStatus    @default(UNPAID)
  
  studentId      String
  student        Student      @relation(fields: [studentId], references: [id])
  feeStructureId String
  feeStructure   FeeStructure @relation(fields: [feeStructureId], references: [id])
  
  payments       Payment[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Payment {
  id           String        @id @default(uuid())
  amount       Float
  method       PaymentMethod
  reference    String?       // e.g., Receipt No. or Transaction ID
  paidAt       DateTime      @default(now())
  
  studentFeeId String
  studentFee   StudentFee    @relation(fields: [studentFeeId], references: [id])
}

// ================= COMMUNICATION =================

model Chat {
  id         String   @id @default(uuid())
  message    String
  senderId   String
  sender     User     @relation("Sender", fields: [senderId], references: [id])
  receiverId String
  receiver   User     @relation("Receiver", fields: [receiverId], references: [id])
  createdAt  DateTime @default(now())
  isRead     Boolean  @default(false)
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  details   String?
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}