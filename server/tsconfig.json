// FILE: server/tsconfig.json
{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",
    "lib": ["es2020"],

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,

    /* Emit */
    "outDir": "./dist",
    "rootDir": "./src",             // <--- The rule you set

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],          // <--- FIX: Only compile files inside src
  "exclude": ["node_modules", "prisma", "test-socket.ts"] // <--- FIX: Explicitly ignore these
}