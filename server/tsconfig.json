// FILE: server/tsconfig.json
{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",
    "lib": ["es2020"],

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,

    /* Emit */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* === CRITICAL FIXES FOR TYPES === */
    // 1. Explicitly tell TS where to look for custom types
    "typeRoots": ["./node_modules/@types", "./src/types"] 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "prisma", "test-socket.ts"],

  /* === CRITICAL FIX FOR TS-NODE === */
  // 2. Force ts-node to load all files in 'include', not just imported ones.
  // This ensures express.d.ts is actually read.
  "ts-node": {
    "files": true
  }
}